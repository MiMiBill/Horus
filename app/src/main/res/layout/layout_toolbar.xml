<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fyt_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_toolbar_back"
        android:layout_width="@dimen/toolbar_back_width"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@mipmap/ic_back_gray"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/translation_service_agreement"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/toolbar_title_text_size"
        android:gravity="center"
        android:textStyle="bold"
        android:maxEms="12"
        android:ellipsize="end"/>


    <TextView
        android:id="@+id/tv_toolbar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center"
        android:paddingStart="@dimen/margin_default_s"
        android:paddingEnd="@dimen/margin_default_s"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/toolbar_right_text_size"
        android:visibility="gone"
        tools:text="@string/wallet_account" />


    <ImageView

        android:id="@+id/iv_toolbar_right"
        android:layout_width="@dimen/toolbar_back_width"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:scaleType="center"
        android:visibility="gone"
        />

</FrameLayout>