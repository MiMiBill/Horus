<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/loading_data_error_head" />


    <TextView
        android:id="@+id/txt_check_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rcv_load_error_check_net"
        android:textColor="@color/text_mid"
        android:textSize="@dimen/text_default"
        android:visibility="gone"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/lyt_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_default">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rcv_load_error_reload"
            android:textColor="@color/text_mid_dark"
            android:textSize="@dimen/text_default_l" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small_s"
            android:src="@mipmap/loading_data_error_reload" />
    </LinearLayout>


</LinearLayout>